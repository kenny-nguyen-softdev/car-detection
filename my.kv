<TheThirdScreen>:
    name: "third"
    id: my_widget3
    canvas.before:
        Color:
            rgba:(118/255,113/255,113/255,1)
        Rectangle:
            size: root.width,root.height
            pos:self.pos
    BoxLayout:
        id: layout
        size_hint:0.65,0.65
        pos_hint: {"center_x": 0.36,"center_y": 0.58}
        VideoPlayer:
            canvas.before:
                Color:
                    rgba: (130/255,144/255,194/225,1) 
                Line:
                    rounded_rectangle: (self.pos[0],self.pos[1],self.size[0] + 10,self.size[1] + 10,18)
                    width: 2
            id: video3
            source: ""
            state: "play"
            options: {'eos':'loop'}
            allow_fullscreen: False
            allow_stretch: True 
    Label:
        text:'Numbers of cars in road line'
        font_size: 25
        font_name: "font2"
        pos_hint: {"center_x": 0.87,"center_y": 0.8}
    RoundedButtonThird:
        size_hint:0.2,0.1
        text: "Play"
        font_name: "font2"
        pos_hint: {"center_x": 0.85,"center_y": 0.6}
        on_release: 
            root.play_video()
    RoundedButtonThird:
        size_hint:0.2,0.1
        text: "Pause"
        font_name: "font2"
        pos_hint: {"center_x": 0.85,"center_y": 0.4}
        on_release: root.pause_video()
    Label:
        id: time
        text:'Time to slove file video: 0'
        font_size: 25
        font_name: "font2"
        pos_hint: {"center_x": 0.85,"center_y": 0.2}
    RoundedButtonThird:
        size_hint:0.2,0.1
        text: "LOAD VIDEO"
        font_name: "font2"
        font_size: 30
        pos_hint: {"center_x": 0.5,"center_y": 0.1}
        on_release: root.open_popup()
    RoundedButtonThird:
        size_hint:0.2,0.1
        text: "COUNTING CAR"
        font_name: "font2"
        font_size: 20
        pos_hint: {"center_x": 0.85,"center_y": 0.1}
        on_release: 
            root.couting_car()
    RoundedButtonThird:
        text: "Go Back Home"
        color: (0,0,0)
        outline_color: (243/255,246/255,244/255)
        outline_width: 3
        size_hint: 0.2,0.1
        bold:True
        font_size: 25
        font_name: "font2"
        pos_hint: {'center_x': 0.1,'center_y': 0.1}
        on_press: 
            app.root.current = "first"
            root.manager.transition.direction = "right"
            root.pause_video()
        border:(16,16,16,16)
    ProgressBar:
        id: my_progress_bar
        value: 0
        min: 0
        max: 100
        pos_hint: {'center_x':0.4,'center_y':0.2}
        size_hint: .5,.5
        background: (0,0,0)
    Label:
        id: load
        text: ""
        font_size: 30
        font_name: "font2"
        pos_hint: {'center_x':0.05,'center_y':0.2}

<RoundedButtonThird@Button>:
	background_color:(0,0,0,0)
